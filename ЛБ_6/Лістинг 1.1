#include <iostream>
#include <vector>
#include <queue>
using namespace std;

struct Edge {
    int to;
    int w;
};

int main() {
    const int INF = 1e9;
    const int N = 8; // кількість вершин

    vector<vector<Edge>> G(N+1);

    auto add = [&](int u, int v, int w){
        G[u].push_back({v, w});
        G[v].push_back({u, w});
    };

    add(1,2,2);
    add(1,4,1);
    add(1,7,1);
    add(2,4,3);
    add(2,5,9);
    add(4,5,2);
    add(5,6,3);
    add(6,4,5);
    add(6,3,4);
    add(4,3,5);
    add(3,7,4);
    add(7,8,6);
    add(6,8,1);
    add(3,8,9);

    int s = 1;

    vector<int> dist(N+1, INF);
    vector<int> pred(N+1, -1);

    priority_queue<pair<int,int>, vector<pair<int,int>>, greater<pair<int,int>>> pq;

    dist[s] = 0;
    pq.push({0,s});

    while (!pq.empty()) {
        auto [d,u] = pq.top();
        pq.pop();
        if (d != dist[u]) continue;

        for (auto edge : G[u]) {
            int v = edge.to, w = edge.w;
            if (dist[v] > dist[u] + w) {
                dist[v] = dist[u] + w;
                pred[v] = u;
                pq.push({dist[v], v});
            }
        }
    }

    cout << "Найкоротші шляхи від вершини 1:" << endl;
    for (int i = 1; i <= N; i++) {
        cout << "1 → " << i << " = " << dist[i] 
             << "   (пред: " << pred[i] << ")" << endl;
    }

    return 0;
}
